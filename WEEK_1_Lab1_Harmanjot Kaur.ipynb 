      "source": [
        "# Submitting your Script"
      ]
    },
    {
      "cell_type": "code",
      "source": [
        "from pyfiglet import Figlet\n",
        "\n",
        "#Instantiate a Figlet Object\n",
        "f = Figlet()\n",
        "\n",
        "#Prompt the user to select a font\n",
        "font_selection = int(input(\"Select a font: \\n 1. doom \\n 2. isometric3 \\n 3. mirror \\n 4. puffy \\n 5. smkeyboard \\n >>> \"))\n",
        "\n",
        "#Prompt the user to type a message\n",
        "user_msg = input(\"Enter a message: \\n >>>\")\n",
        "\n",
        "# if,elif and else for font condition\n",
        "if font_selection == 1: \n",
        "  f.setFont(font = \"doom\")\n",
        "  print(f.renderText(user_msg))\n",
        "\n",
        "elif font_selection == 2: \n",
        "  f.setFont(font = \"isometric3\")\n",
        "  print(f.renderText(user_msg))\n",
        "\n",
        "elif font_selection == 3: \n",
        "  f.setFont(font = \"mirror\")\n",
        "  print(f.renderText(user_msg))  \n",
        "\n",
        "elif font_selection == 4: \n",
        "  f.setFont(font = \"puffy\")\n",
        "  print(f.renderText(user_msg))\n",
        "\n",
        "elif font_selection == 5: \n",
        "  f.setFont(font = \"smkeyboard\")\n",
        "  print(f.renderText(user_msg))\n",
        "\n",
        "# if selection is wrong\n",
        "else : \n",
        "  print(\"Wrong selection please rerun and put only no. between 1 and 5.\")"
      ],
